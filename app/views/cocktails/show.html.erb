<h1><%= @cocktail.name %><h1/>
<ul>
  <% @cocktail.doses.each do |dose|%>
  <li> <%= dose.description %></li>
  <li> <%= dose.ingredient.name %></li>
<% end %>
</ul>
<%= link_to "Return to list", cocktails_path %>
<%= link_to "Delete", cocktail_path(@cocktail),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
